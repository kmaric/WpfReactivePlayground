      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfReactivePlayground.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PageTwo">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="7*" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0">
                <TextBlock Text="PageTwo" Foreground="White" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
            </DockPanel>

            <StackPanel Grid.Row="1" Margin="0, 30, 0, 0">
                <TextBlock Text="0" Foreground="White" FontSize="30" TextAlignment="Center" />
            </StackPanel>
        </Grid>
    </Grid>
